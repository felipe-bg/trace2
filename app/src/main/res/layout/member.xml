<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/channel_member_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/activity_channel_member_vertical_margin"
    android:background="@drawable/rectangle_background"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/channel_member_avatar"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"
        fresco:placeholderImage="@drawable/trace_icon_fore" />

    <TextView
        android:id="@+id/channel_member_username"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_channel_member_height"
        android:layout_weight="0.8"
        android:paddingStart="@dimen/message_text_padding"
        android:gravity="center_vertical"
        android:text="Member displayName"
        android:textStyle="bold" />

</LinearLayout>